
<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :cname, class:"form-control" %>
    <%= f.input :desc, class:"form-control" %>
    <%= f.input :subj, class:"form-control" %>
    <%= f.input :credits, class:"form-control" %>
    <%= f.input :prof, class:"form-control" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  
  <form>
    <div class="form-group form-inputs">
      <label for="exampleInputEmail1">Teacher's Name</label>
      <%= f.input :name, class:"form-control" %>
      <small id="emailHelp" class="form-text text-muted">For example, "Zach Hamby"</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Course Number</label>
      <%= f.input :course, class:"form-control" %>
      <small id="emailHelp" class="form-text text-muted">For example, "1"</small>
    </div>
    <div class="form-actions">
    <%= f.button :submit, class:"btn btn-secondary" %>
    </div>
  </form>
<% end %>
