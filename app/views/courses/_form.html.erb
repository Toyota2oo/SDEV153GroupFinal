<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <form>
    <div class="form-group form-inputs">
      <label>Course Name</label>
      <%= f.input :course_name %>
      <small id="emailHelp" class="form-text text-muted">For example, "SDEV153"</small>
    </div>
    <div class="form-group">
      <label>Description</label>
      <%= f.input :course_desc %>
      <small id="emailHelp" class="form-text text-muted">For example, "An introductory web design course aimed at teaching students how to effectively use HTML, CCS, and Ruby on Rails."</small>
    </div>
    <div class="form-group">
      <label>Subject Area</label>
      <%= f.input :course_subj %>
      <small id="emailHelp" class="form-text text-muted">For example, "Software Development"</small>
    </div>
    <div class="form-group">
      <label>Credit Hours</label></label>
      <%= f.input :course_cred %>
      <small id="emailHelp" class="form-text text-muted">For example, "3"</small>
    </div>
    <div class="form-group">
      <label>Professor</label>
      <%= f.collection_select :course_prof_id, Teacher.all, :id, :teacher_name, prompt: "Select the Teacher"%>
      <small id="emailHelp" class="form-text text-muted">Make sure to select a Teacher!</small>
    </div>
    <div class="form-actions">
    <%= f.button :submit, class:"btn btn-secondary" %>
    </div>
  </form>
<% end %>